<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app>    
	<servlet>
		<servlet-name>Login</servlet-name>
        	<servlet-class>application.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LoginVerification</servlet-name>
        	<servlet-class>application.LoginVerificationServlet</servlet-class>
	</servlet>

	<servlet-mapping>
        	<servlet-name>Login</servlet-name>
        	<url-pattern>/login</url-pattern>
    	</servlet-mapping>
	
    	<servlet-mapping>
        	<servlet-name>LoginVerification</servlet-name>
        	<url-pattern>/verification</url-pattern>
    	</servlet-mapping>
</web-app>
